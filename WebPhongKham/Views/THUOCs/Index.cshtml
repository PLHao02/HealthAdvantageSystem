@model IEnumerable<WebPhongKham.Models.THUOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .form-control {
        display: initial;
        width: 20%;
    }
    .form-group {
        display: flex;
        justify-content: right;
    }
</style>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h2>DANH SÁCH THUỐC</h2>
                        @using (Html.BeginForm("Index", "THUOCs", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            <div class="form-group">
                                <input type="Text" class="form-control" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập tên thuốc cần tìm">
                                <input type="submit" class="btn btn-warning" value="Tìm">
                            </div>
                        }
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TENTHUOC)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENTHUOC)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.THUOCID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.THUOCID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.THUOCID })
                                    </td>
                                </tr>
                            }

                        </table>
                        <br />
                        <br />
                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>