@model IEnumerable<WebPhongKham.Models.KEDONTHUOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h2>ĐƠN THUỐC</h2>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenKH)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenBenh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoLuong)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.THUOC.TENTHUOC)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenKH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenBenh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.THUOC.TENTHUOC)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.KeDonThuocID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.KeDonThuocID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.KeDonThuocID })
                                    </td>
                                </tr>
                            }

                        </table>
                        <br />
                        <br />
                        <p>
                            @Html.ActionLink("Create New", "Create")
                         </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

