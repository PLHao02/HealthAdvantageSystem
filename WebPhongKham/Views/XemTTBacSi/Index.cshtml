@model IEnumerable<WebPhongKham.Models.BACSI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table {
        border: 1px solid black;
        background-color: white;
        color: black;
    }
</style>
<h1><Center>Thông tin bác sĩ</Center></h1>
<div class="container">
    <div class="row">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenBS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgaySinhBS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GioiTinhBS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SDTBS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CHUYENKHOA.TenCK)
                </th>
                
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenBS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinhBS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinhBS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDTBS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CHUYENKHOA.TenCK)
                    </td>
                </tr>
            }

        </table>
    </div>

</div>

